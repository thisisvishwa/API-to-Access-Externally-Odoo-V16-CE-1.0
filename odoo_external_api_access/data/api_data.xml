<odoo>
    <data noupdate="1">
        <!-- API Access Group -->
        <record id="group_api_access_user" model="res.groups">
            <field name="name">API Access User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- API Access Manager Group -->
        <record id="group_api_access_manager" model="res.groups">
            <field name="name">API Access Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('group_api_access_user'))]"/>
        </record>

        <!-- Access Rights for API Access User -->
        <record id="access_api_access_user" model="ir.model.access">
            <field name="name">api.access.user</field>
            <field name="model_id" ref="odoo_external_api_access.model_api_access"/>
            <field name="group_id" ref="group_api_access_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Access Rights for API Access Manager -->
        <record id="access_api_access_manager" model="ir.model.access">
            <field name="name">api.access.manager</field>
            <field name="model_id" ref="odoo_external_api_access.model_api_access"/>
            <field name="group_id" ref="group_api_access_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Initial API Global Configuration -->
        <record id="api_global_config_default" model="odoo_external_api_access.api_global_config">
            <field name="name">Default API Configuration</field>
            <field name="documentation_url">https://thisis.com/api/documentation</field>
            <field name="enable_endpoint_execution" eval="True"/>
            <field name="enable_code_generation" eval="True"/>
        </record>
    </data>
</odoo>