<odoo>
    <data noupdate="1">
        <!-- Demo API Access Configuration -->
        <record id="api_access_demo" model="api.access">
            <field name="name">Demo API Access</field>
            <field name="description">This is a demo API access configuration for testing purposes.</field>
            <field name="active" eval="True"/>
            <field name="api_key">dem0ap1k3y</field>
        </record>

        <!-- Demo API Endpoint -->
        <record id="api_endpoint_demo" model="api.endpoint">
            <field name="name">Demo Endpoint</field>
            <field name="description">A demo endpoint to showcase API functionality.</field>
            <field name="active" eval="True"/>
            <field name="url">/api/demo/endpoint</field>
            <field name="method">GET</field>
            <field name="api_access_id" ref="api_access_demo"/>
        </record>

        <!-- Demo API Parameter -->
        <record id="api_parameter_demo" model="api.parameter">
            <field name="name">Demo Parameter</field>
            <field name="description">A parameter for the demo endpoint.</field>
            <field name="required" eval="True"/>
            <field name="param_type">query</field>
            <field name="data_type">string</field>
            <field name="default_value">default</field>
            <field name="api_endpoint_id" ref="api_endpoint_demo"/>
        </record>

        <!-- Demo API Response -->
        <record id="api_response_demo" model="api.response">
            <field name="name">Demo Response</field>
            <field name="description">A response example for the demo endpoint.</field>
            <field name="response_code">200</field>
            <field name="content_type">application/json</field>
            <field name="body">{"message": "Demo response successful"}</field>
            <field name="api_endpoint_id" ref="api_endpoint_demo"/>
        </record>
    </data>
</odoo>